<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:baselineAligned="false"
    android:background="#CFD3E8">

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Meals"
        android:id="@+id/button_meal"
        android:layout_weight="0.20"
        android:layout_gravity="center_horizontal|left"
        android:textSize="36sp"
        android:onClick="openMeal_subcategory"
        android:background="#ffffff"
        android:singleLine="false"
        android:textColor="#33b5e5"
        android:textStyle="bold"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Transport"
        android:id="@+id/button_transport"
        android:layout_gravity="left|right"
        android:layout_weight="0.20"
        android:textSize="36sp"
        android:onClick="openTransport_subcategory"
        android:background="#ffffff"
        android:textColor="#33b5e5"
        android:textStyle="bold"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
       />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Company Car"
        android:id="@+id/button_company_car"
        android:layout_weight="0.20"
        android:textSize="36sp"
        android:onClick="openCar_subcategory"
        android:background="#ffffff"
        android:textColor="#33b5e5"
        android:textStyle="bold"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Office Materials"
        android:id="@+id/button_office"
        android:layout_gravity="right"
        android:layout_weight="0.20"
        android:textSize="36sp"
        android:onClick="openOffice_subcategory"
        android:background="#ffffff"
        android:textColor="#33b5e5"
        android:textStyle="bold"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Representation Expenses"
        android:id="@+id/button_representation_exp"
        android:layout_weight="0.20"
        android:textSize="36sp"
        android:onClick="openRepresentation_subcategory"
        android:background="#ffffff"
        android:textColor="#33b5e5"
        android:textStyle="bold"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="10sp"/>

</LinearLayout>