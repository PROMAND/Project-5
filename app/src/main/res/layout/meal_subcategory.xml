<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#CFD3E8">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Breakfast"
        android:id="@+id/button_breakfast"
        android:layout_gravity="right"
        android:layout_weight="0.20"
        android:textSize="36sp"
        android:onClick="inputBreakfast"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="#ffffff"
        android:textColor="#33b5e5"
        android:textStyle="bold"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lunch"
        android:id="@+id/button_lunch"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.20"
        android:textSize="36sp"
        android:onClick="inputLunch"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="#ffffff"
        android:textColor="#33b5e5"
        android:textStyle="bold"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dinner"
        android:id="@+id/button_dinner"
        android:layout_weight="0.20"
        android:textSize="36sp"
        android:onClick="inputDinner"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="#ffffff"
        android:textColor="#33b5e5"
        android:textStyle="bold"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Half board"
        android:id="@+id/button_hb"
        android:layout_gravity="right"
        android:layout_weight="0.20"
        android:textSize="36sp"
        android:onClick="inputHB"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="#ffffff"
        android:textColor="#33b5e5"
        android:textStyle="bold"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Full board"
        android:id="@+id/button_all"
        android:layout_weight="0.20"
        android:textSize="36sp"
        android:onClick="inputFull"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="#ffffff"
        android:textColor="#33b5e5"
        android:textStyle="bold"/>

</LinearLayout>